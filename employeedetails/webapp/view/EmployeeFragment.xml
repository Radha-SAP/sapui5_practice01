<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="employeedetails" title="{i18n>employeeDetails}">
        <content>
            <VBox id="_IDGenVBox1">
                <HBox id="_IDGenHBox1">
                    <Label id="_IDGenLabel1" text="{i18n>employeeId}"/>
                    <Input id="_IDGenInput1" value=""/>
                    </HBox>
                    <HBox id="_IDGenHBox2">
                    <Label id="_IDGenLabel2" text="{i18n>name}"/>
                    <Input id="_IDGenInput2" value=""/>
                    </HBox>
                    <HBox id="_IDGenHBox3">
                    <Label id="_IDGenLabel3" text="{i18n>department}"/>
                    <Input id="_IDGenInput3" value=""/>
                    </HBox>
                    <HBox id="_IDGenHBox4">
                    <Label id="_IDGenLabel4" text="{i18n>designation}"/>
                    <Input id="_IDGenInput4" value=""/>
                    </HBox>
                    <HBox id="_IDGenHBox5">
                    <Label id="_IDGenLabel5" text="{i18n>salary}"/>
                    <Input id="_IDGenInput5" value=""/>
                    </HBox>
                    </VBox>
                    <HBox id="_IDGenHBox6">
                    <Button id="_IDGenButton2" text="Save"  press="onSave"  width="auto" class="sapUiTinyMargin"/>
                    <Button id="_IDGenButton3" text="Cancel"  press="onCancel"  width="auto" class="sapUiTinyMargin"/>
                    </HBox>
          </content>
    </Dialog>
</core:FragmentDefinition>