<mvc:View
    controllerName="ar.com.codeproject5.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin"
            >
                <HBox id="_IDGenHBox2">
                    <Label
                        id="_IDGenLabel9"
                        text="Card Code"
                    />
                    <Input
                        id="_IDGenInput9"
                        value=""
                        editable="false"
                    />
                    <Label
                        id="_IDGenLabel10"
                        text="Card Name"
                    />
                    <Input
                        id="_IDGenInput10"
                        value=""
                        editable="false"
                    />
                </HBox>
                <f:SimpleForm
                    id="SimpleFormDisplay354wide"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    title="Address"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label
                            id="_IDGenLabel1"
                            text="CardType"
                        />
                        <Input
                            id="_IDGenInput1"
                            value=""
                            editable="false"
                        />
                        <Label
                            id="_IDGenLabel2"
                            text="GroupCode"
                        />
                        <Input
                            id="_IDGenInput2"
                            value=""
                            editable="false"
                        />
                        <Label
                            id="_IDGenLabel3"
                            text="Address"
                        />
                        <Input
                            id="_IDGenInput3"
                            value=""
                            editable="false"
                        />
                        <Label
                            id="_IDGenLabel4"
                            text="ZipCode"
                        />
                        <Input
                            id="_IDGenInput4"
                            value=""
                            editable="false"
                        />
                        <Label
                            id="_IDGenLabel5"
                            text="Phone1"
                        />
                        <Input
                            id="_IDGenInput5"
                            value=""
                            editable="false"
                        />
                        <Label
                            id="_IDGenLabel6"
                            text="Phone2"
                        />
                        <Input
                            id="_IDGenInput6"
                            value=""
                            editable="false"
                        />
                        <Label
                            id="_IDGenLabel7"
                            text="Currency"
                        />
                        <Input
                            id="_IDGenInput7"
                            value=""
                            editable="false"
                        />
                        <Label
                            id="_IDGenLabel8"
                            text="EmailAddress"
                        />
                        <Input
                            id="_IDGenInput8"
                            value=""
                            editable="false"
                        />
                    </f:content>
                </f:SimpleForm>
                <HBox id="_IDGenHBox1">
                    <Button
                        id="_IDGenButton1"
                        text="Edit"
                        press="onEdit"
                    />
                    <Button
                        id="_IDGenButton2"
                        text="Save"
                        press="onSave"
                    />
                </HBox>
            </VBox>

            <f:SimpleForm
                id="productForm"
                editable="false"
                layout="ResponsiveGridLayout"
            >
                <Label
                    id="_IDGenLabel11"
                    text="Product ID"
                />
                <Text
                    id="_IDGenText1"
                    text="{yourODataModel>/ProductID}"
                />

                <Label
                    id="_IDGenLabel12"
                    text="Product Name"
                />
                <Text
                    id="_IDGenText2"
                    text="{yourODataModel>ProductName}"
                />

                <Label
                    id="_IDGenLabel13"
                    text="Quantity Per Unit"
                />
                <Text
                    id="_IDGenText3"
                    text="{yourODataModel>QuantityPerUnit}"
                />

                <Label
                    id="_IDGenLabel14"
                    text="Unit Price"
                />
                <Text
                    id="_IDGenText4"
                    text="{yourODataModel>UnitPrice}"
                />

                <Label
                    id="_IDGenLabel15"
                    text="Units In Stock"
                />
                <Text
                    id="_IDGenText5"
                    text="{yourODataModel>UnitsInStock}"
                />
            </f:SimpleForm>
        </content>
    </Page>
</mvc:View>
